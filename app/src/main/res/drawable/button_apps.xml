<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- PRESSED -->
	<item android:state_pressed="true">
	    <layer-list>
		    <item android:left="40dp" android:top="40dp" android:drawable="@drawable/square_black" />
		    <item android:right="40dp" android:top="40dp" android:drawable="@drawable/square_black" />
		    <item android:left="40dp" android:bottom="40dp" android:drawable="@drawable/square_black" />
		    <item android:right="40dp" android:bottom="40dp" android:drawable="@drawable/square_black" />
	    </layer-list>
    </item>
    
	<!-- NORMAL -->
	<item>
	    <layer-list>
		    <item android:left="40dp" android:top="40dp" android:drawable="@drawable/square_white" />
		    <item android:right="40dp" android:top="40dp" android:drawable="@drawable/square_white" />
		    <item android:left="40dp" android:bottom="40dp" android:drawable="@drawable/square_white" />
		    <item android:right="40dp" android:bottom="40dp" android:drawable="@drawable/square_white" />
	    </layer-list>
    </item>
    
</selector>
